{% extends 'web/back/base.html.twig' %}

{% import 'web/back/macros/buttons.html.twig' as buttons %}
{% import 'web/back/macros/icons.html.twig' as icons %}

{% block header %}
    <div class="page-header">
        <div class="left">
            <h1 class="title">
                {{ icons.vehicle }}
                {{ 'app.vehicle_model.plural'|trans }}
            </h1>
        </div>
        <div class="right">
            <a class="btn btn-default" href="{{ path('vehicle_model_back_index') }}">
                <i class="fa fa-caret-left"></i>
                {{ 'app.common.action.back'|trans }}
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="panel panel-default" style="display: flex; justify-content: space-around; align-items: center;">
            <div class="card  col-lg-6">
                <div class="card-body" style="display:flex;justify-content: center;">
                    <h2 class="card-title" style=" padding : 10px;">{{ vehicle_model.brand }}</h2>
                    <h2 class="card-title" style=" padding : 10px;">{{ vehicle_model.name }}</h2>
                </div>
            </div>
             <iframe class="col-lg-6" src="{{ vehicle_video.embed_url }}" width="560" height="315" allowfullscreen frameborder="0"></iframe>
    </div>


    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-lg-12">
            <div class="panel-header" style="display: flex; justify-content: space-around;">
                <div class="panel-group">
                    {{ buttons.delete(path('vehicle_model_back_delete', {'id': vehicle_model.id})) }}
                </div>
                <div class="panel-group">
                    {{ buttons.update(path('vehicle_model_back_update', {'id': vehicle_model.id})) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
